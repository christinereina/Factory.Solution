@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers Page</h1>
<img src="~/img/engineers.png">

@if (@Model.Count == 0)
{
  <h5>There are no engineers just yet!</h5>
}
else 
{

  <table class="table table-striped table-hover ">
      <tr>
        <th>Name</th>
        @* <th>Hire Date</th>
        <th>Engineer Id</th>
        <th>Skill Level</th> *@
      </tr>

@foreach (Engineer engineer in Model)
{
  <tr>
    <td>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId}) </td>
    </tr>
  }
  </table>
}

<button type="button" class="btn btn-warning">@Html.ActionLink("Add an Engineer", "Create")</button>