@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers Page</h1></hr>
<img src="~/img/engineers.png">

@if (@Model.Count == 0)
{
  <h5>There are no engineers just yet!</h5>
}

@foreach (Engineer engineer in Model)
{
  @Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId})
} 

<button>@Html.ActionLink("Home", "Index", "Home")</button> 
<button>@Html.ActionLink("Add an Engineer", "Create")</button>