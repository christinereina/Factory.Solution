@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Edit this Machine: @Html.DisplayFor(model => model.Name)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name) <br>
  @Html.EditorFor(model => model.Name) <br>

  @Html.LabelFor(model => model.Number) <br>
  @Html.EditorFor(model => model.Number) <br>

  @Html.LabelFor(model => model.Description) <br>
  @Html.EditorFor(model => model.Description) <br><br>

  <input type="submit" class="btn btn-warning" value="Save" />
}

<button type="button" class="btn btn-warning">@Html.ActionLink("Back to Machines", "Index")</button> 
